<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/forgot_password_margin"
    app:cardCornerRadius="35dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_restore_password">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_key"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeLarge"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_marginTop="@dimen/divider_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ssfdfdfsfsdfsdfsdcdscdscscsdcdscsdcsdc"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/iv_qr_priv_btc"
            android:layout_width="@dimen/iv_qr_size"
            android:layout_height="@dimen/iv_qr_size"
            android:background="@color/black" />

        <HorizontalScrollView
            android:layout_width="@dimen/transaction_detail_width"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_default_bg"
            android:padding="3dp"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tv_priv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/black"
                tools:text="hkfsdhkfhskdfhdsfydiufdsufyiudyfuysiudyfis "/>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/divider_m"
            android:background="@drawable/button_ok_dialog_restore_password_enabled_bg"
            android:backgroundTint="@color/orange"
            android:text="@string/close"
            android:textColor="@color/white" />

    </LinearLayout>
</android.support.v7.widget.CardView>